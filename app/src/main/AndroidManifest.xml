<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dennistjahyadi.cashless">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.White">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarWhite" />
        <activity
            android:name=".Barcode.BarcodeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarWhite" />
        <activity
            android:name=".History.HistoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".Balance.BalanceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".BarcodeScanner.BarcodeCaptureActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".TransactionDetail.TransactionDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarWhite" />
        <activity
            android:name=".Profile.ProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarWhite" />
        <activity
            android:name=".Payment.PaymentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".PersonalInformation.PersonalInformationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.White" />

        <activity
            android:name=".PersonalInformation.PersonalInformationEditorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".Barcode.SavedBarcodeListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".Barcode.SavedBarcodeCreateActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.White" />

        <activity
            android:name=".Bank.BankAccountActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarWhite" />

        <activity
            android:name=".Bank.BankAccountAddActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.White" />

        <activity
            android:name=".Withdraw.WithdrawActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".Deposit.DepositActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.White" />
    </application>

</manifest>